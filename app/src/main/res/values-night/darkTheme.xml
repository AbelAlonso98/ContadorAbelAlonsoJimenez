<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="seekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/darkOrange</item>
        <item name="android:progressTint">@color/orange</item>
        <item name="thumbTint">@color/darkOrange</item>
    </style>

    <style name="scrollLayout">
        <item name="android:background">@drawable/background_upgrades_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="buttonTheme">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="maxUpgradeButtonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/darkPink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backImage">
        <item name="srcCompat">@drawable/img_back_pink</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="upgradeClick">
        <item name="srcCompat">@drawable/img_upgrade_click_pink</item>
    </style>

    <style name="upgradeAutoClick">
        <item name="srcCompat">@drawable/img_upgrade_autoclick_pink</item>
    </style>

    <style name="upgradeSpeed">
        <item name="srcCompat">@drawable/img_upgrade_speed_pink</item>
    </style>


    <style name="shopImage">
        <item name="srcCompat">@drawable/img_shop_pink</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

</resources>